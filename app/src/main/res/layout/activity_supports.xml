<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fap.bnotion.findaplace.SupportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_home_black_24dp"
            android:tint="@android:color/white"
            android:contentDescription="@string/home_button" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/support"/>
        <ImageView
            android:id="@+id/mail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_contact_mail_black_24dp"
            android:tint="@android:color/white"
            android:contentDescription="@string/contact" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@color/custom_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/muli"
            android:text="@string/follow_us_on"
            android:textColor="@color/light_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/view_background" />

        <ImageView
            android:id="@+id/facebook_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/facebook_image"
            android:src="@drawable/facebook" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/view_background" />

        <ImageView
            android:id="@+id/twitter_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/twitter_image"
            android:src="@drawable/twitter" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/view_background" />

        <ImageView
            android:id="@+id/instagram_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/twitter_image"
            android:src="@drawable/instagram" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/view_background" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/frame"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="@string/call_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/muli"
                    android:padding="15dp"
                    android:text="@string/_07087384070"
                    android:textSize="15sp"
                    android:tint="@color/icon_color" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/view_background"/>
            <LinearLayout
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="@string/call_line" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/_08100599608"
                    android:fontFamily="@font/muli"
                    android:tint="@color/icon_color"
                    android:textSize="15sp"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/view_background"/>
            <LinearLayout
                android:id="@+id/line_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="@string/call_line" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/_08033761447"
                    android:fontFamily="@font/muli"
                    android:tint="@color/icon_color"
                    android:textSize="15sp"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/view_background"/>
            <LinearLayout
                android:id="@+id/line_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:contentDescription="@string/call_line" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/_07087384070"
                    android:fontFamily="@font/muli"
                    android:tint="@color/icon_color"
                    android:textSize="15sp"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/view_background"/>
            <LinearLayout
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_public_black_24dp"
                    android:contentDescription="@string/website" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/findaplace_com"
                    android:fontFamily="@font/muli"
                    android:tint="@color/icon_color"
                    android:textSize="15sp"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/view_background"/>
            <LinearLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="@color/icon_color"
                    android:padding="10dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:contentDescription="@string/mail" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/info_findaplace_com"
                    android:fontFamily="@font/muli"
                    android:tint="@color/icon_color"
                    android:textSize="15sp"
                    android:padding="15dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
