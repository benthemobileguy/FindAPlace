<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@color/custom_white">
    <include layout="@layout/app_bar_layout_invisible"
        android:id="@+id/register_toolbar"/>
    <ImageView
        android:layout_below="@+id/register_toolbar"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_new"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <RelativeLayout
        android:id="@+id/fieldsLayout"
        android:layout_below="@+id/image"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/email_input_text">
            <EditText
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="@string/your_email"
                android:fontFamily="@font/muli_semibold"
                android:id="@+id/email"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:padding="10dp"
            android:layout_below="@+id/email_input_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <EditText
                android:padding="10dp"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:fontFamily="@font/muli_semibold"
                android:maxLines="1"
                android:textSize="16sp"
                android:ems="10"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/button_selector"
            android:layout_below="@+id/password_input_text"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@drawable/text_selector1"
            android:layout_margin="16dp"
            android:text="@string/login_to_account" />
        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/skip_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_button"
            android:layout_alignStart="@+id/login_button"
            android:layout_below="@+id/login_button">
            <TextView
                android:id="@+id/skip_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/muli"
                android:text="@string/skip_login"
                android:textColor="@drawable/text_selector5"
                android:textSize="15sp"
                android:textStyle="bold"
                android:focusable="true" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/skip_login_text"
                android:layout_toRightOf="@+id/skip_login_text"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/skip"
                android:tint="@color/customTextColor2"
                android:layout_toEndOf="@+id/skip_login_text"
                android:layout_marginStart="6dp"
                android:contentDescription="@string/skip" />
        </RelativeLayout>
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/muli"
            android:layout_alignEnd="@+id/login_button"
            android:layout_below="@+id/login_button"
            android:text="@string/forgot_password"
            android:textColor="@drawable/text_selector5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignRight="@+id/login_button"
            android:focusable="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLogin"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/gmail_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_selector"
            android:drawableStart="@drawable/google"
            android:fontFamily="@font/muli_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:textColor="@drawable/text_selector1"
            android:drawableLeft="@drawable/google" />
        <Button
            android:id="@+id/new_account"
            android:fontFamily="@font/muli_bold"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/new_account"
            android:background="@drawable/button_selector"
            android:text="Create New Account"
            android:textColor="@drawable/text_selector1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/new_account" />
    </LinearLayout>
</RelativeLayout>